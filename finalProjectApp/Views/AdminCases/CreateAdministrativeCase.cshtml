@{
	if (Context.Session.GetString("User") == null)
	{
		Context.Response.Redirect("/Home/Index");
	}
	ViewData["Title"] = "Utwórz sprawę administracyjną";
	var userJson = Context.Session.GetString("User");
	var userRole = "";
	using (var doc = System.Text.Json.JsonDocument.Parse(userJson))
	{
		userRole = doc.RootElement.GetProperty("UserRole").GetString();
	}
	if (userRole != "Lokator")
	{
		Context.Response.Redirect("/Home/NotAuthorized");
	}
}
@model UserModel
<div class="upperpanel">
	<div class="sitename">
		<h2>Utwórz sprawę administracyjną</h2>
	</div>
	<a href="@Url.Action("Logout","User")">
		<div class="function">
			Wyloguj
		</div>
	</a>
</div>

<div class="text-center">
	@Html.BeginForm("AddCase", "AdminCases", FormMethod.Post)
	<fieldset class="createForm">
		<label name="caseSubject" id="caseSubject" for="caseSubject">Temat sprawy:</label>
		<input type="text" name="caseSubject" id="caseSubject" maxlength="30" required /> 
		<label name="caseDetails" id="caseDetails" for="caseDetails">Opis sprawy:</label>
		<textarea name="caseDetails" id="caseDetails" required></textarea>
	</fieldset>
	<input type="submit" value="Utwórz sprawę" name="addCase" id="addCase" />
</div>
<div class="returnButton">
	<a asp-area="" asp-controller="User" asp-action="UserMenu">
		<div class="returnMenu">
			<h4>Powrót do menu</h4>
		</div>
	</a>
</div>