<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="finalProjectMobileApp.ChangePasswordPage"
             Title="ChangePasswordPage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Label 
            Text="Zmiana hasła"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Nowe hasło:"  Margin="10,0" />
        <Entry x:Name="newPasswordEntry" IsPassword="True"  Margin="10,0" />
        <Label Text="Powtórz hasło:" Margin="10,0"/>
        <Entry x:Name="confirmNewPasswordEntry" IsPassword="True" Margin="10,0" />
        <Button x:Name="changePasswordButton" Text="Zmień hasło" Clicked="ChangePasswordButton_Clicked" CommandParameter="{Binding technicianId}" Margin="10,20"/>
        <Button x:Name="returnToHomePage" Text="Przejdź do strony głównej" Clicked="ReturnToHomePage_Clicked" Margin="10,20" />
        <Label x:Name="errorLabel" IsVisible="False" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>